{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  },
  "include": ["src", "test"]
}
